			<section class="grid col-three-quarters mq2-col-full">
				<div class="work-page main grid-wrap">

					<header class="grid col-full">
						<hr>
						<p class="fleft">Project</p>
					</header>


					<aside class="grid col-one-quarter mq2-col-one-third mq3-col-full">

						<!--  			<form action="StoreInfo" method="post">-->
						<%
							Store storeInfo = null;
							String name = null;
							String location = null;
							String status = null;
							int isOpen = -1;
							String description = null;
						%>

						<%
							storeInfo = (Store) request.getAttribute("storeinfo");
							name = storeInfo.getName();
							location = storeInfo.getLocation();
							isOpen = storeInfo.getIsOpen();
							if (isOpen == 1)
								status = "isOpen";
							else if (isOpen == 0)
								status = "isNotOpen";
							description = storeInfo.getDescription();
						%>

						<script>
							function setNameRights() {
								if (document.getElementById("stname").readOnly == true)
									document.getElementById("stname").readOnly = false;
								else
									document.getElementById("stname").readOnly = true;
							}

							function setLocationRights() {
								if (document.getElementById("stlocation").readOnly == true)
									document.getElementById("stlocation").readOnly = false;
								//	document.getElementById("locationbutton").value = "Done";
								else
									document.getElementById("stlocation").readOnly = true;
								//	document.getElementById("locationbutton").value = "Edit";	
							}

							function setStatusRights() {
								if (document.getElementById("ststatus").disabled == true)
									document.getElementById("ststatus").disabled = false;
								else
									document.getElementById("ststatus").disabled = true;
							}

							function setDescriptionRIghts() {
								if (document.getElementById("stdescription").readOnly == true)
									document.getElementById("stdescription").readOnly = false;
								else
									document.getElementById("stdescription").readOnly = true;
							}
						</script>

						<form action="UpdateStore" method="post">
							<p class="mbottom">
							<h4>WareHouse Info</h4>
							</p>
							<h6>Name</h6>
							<ul class="halfmbottom">
								<input type="text" id="stname" value='<%out.print(name);%>'
									name="stname" readonly="readonly" class="field left">
								<!--  	<button type="button" onclick="setNameRights()">Edit</button> -->
							</ul>

							<h6>Location</h6>
							<ul class="halfmbottom">
								<input type="text" id="stlocation"
									value='<%out.print(location);%>' name="stlocation"
									readonly="readonly" class="field left">
								<button type="button" onclick="setLocationRights()"
									id="locationbutton">Edit</button>
							</ul>

							<h6>Status</h6>
							<ul class="halfmbottom">
								<select name="ststatus" id="ststatus" disabled="disabled">
									<%
										if (isOpen == 1) {
											out.print("<option value='isOpen' selected>Opened</option>");
											out.print("<option value='isNotOpen'>Closed</option>");
										} else if (isOpen == 0) {
											out.print("<option value='isNotOpen' selected>Closed</option>");
											out.print("<option value='isOpen'>Opened</option>");
										}
									%>
								</select>
								<button type="button" onclick="setStatusRights()">Edit</button>
							</ul>

							<h6>Description</h6>
							<ul class="halfmbottom">
								<input type="text" id="stdescription"
									value='<%out.print(description);%>' readonly="readonly"
									name="stdescription" class="field left">
								<button type="button" onclick="setDescriptionRIghts()">Edit</button>
							</ul>

							<button id="apply" type="submit">Apply</button>
						</form>


						<!--					</p>
						<form action="UpdateStore" method="post">
							<p>
								<%//				request.getSession().setAttribute("stname",
			//						request.getParameter("stname"));
			//				request.getSession().setAttribute("stlocation",
			//						request.getParameter("stlocation"));
			//				request.getSession().setAttribute("ststatus",
			//						request.getParameter("ststatus"));
			//				request.getSession().setAttribute("stdescription",
			//						request.getParameter("stdescription"));%>
								<button id="apply" type="submit">Apply</button>
							</p>

						</form>-->

						<form action="DeleteStore" method="post">
							<p>
								<%
									request.getSession().setAttribute("stname", name);
									request.getSession().setAttribute("stlocation", location);
									request.getSession().setAttribute("ststatus", status);
									request.getSession().setAttribute("stdescription", description);
								%>
								<button id="delete" type="submit">Delete</button>
							</p>

						</form>


					</aside>
					<!--  			<form action="StoreInfo" method="post">-->
					<%
						List<Object[]> products = null;
					%>

					<%
						products = (List<Object[]>) request.getAttribute("storeproducts");
					%>

					<section
						class="grid col-three-quarters mq2-col-two-thirds mq3-col-full">

						<p class="mbottom">
						<h4>WareHouse Products</h4>

					</section>

					<%
						if (products != null)
							for (Object[] resultElement : products) {
								out.print("<figure class='grid col-one-third mq1-col-one-half mq2-col-one-third mq3-col-full work_1'>");
								out.print("<a href='work1.html'> <img src='img/img.jpg' alt=''>");
								out.print("<span class='zoom'></span></a>");
								out.print("<figcaption>");
					%>
					<a
						href='<%=request.getContextPath()%>/ProductInfo?<%request.getSession().setAttribute("productname",
							(String) resultElement[0]);%>'>
						<%
							out.print((String) resultElement[0]);
						%>
					</a> <br>
					<%
						out.print((String) resultElement[1]);
								out.print("</figcaption>");
								out.print("</figure>");
							}
					%>


					<!--  	</form>-->



				</div>

			</section>



